Finances:

<Finances>
    id: finances
    size_hint: (1, 1)
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        FloatLayout:
            size_hint: (None, None)
            width: self.parent.width
            height: self.parent.height
            PieChart:
                id: pie_chart
                size_hint: (None, None)
                width: self.parent.width
                height: self.parent.height
                text: "Balance"
                halign: "center"
                color: app.theme_cls.primary_dark

            BoxLayout:
                id: legend
                size_hint: (1, None)
                height: self.parent.height/13
                top: self.parent.parent.top
        BoxLayout:
            size_hint: (None, None)
            width: self.parent.width
            height: self.parent.height / 2
            BoxLayout:
                orientation: 'vertical'
                Widget:
                MDIconButton:
                    icon: "plus-circle-outline"
                    size_hint: (1, 1)
                    pos_hint: {"center_x": .5, "center_y": .5}
                    padding: 10
                    theme_icon_color: "Custom"
                    icon_color: app.theme_cls.primary_dark
                    on_release: finances.show_ticket(0)
                Widget:


            BoxLayout:
                orientation: 'vertical'
                id: input_field



            BoxLayout:
                orientation: 'vertical'
                Widget:
                MDIconButton:
                    icon: "minus-circle-outline"
                    size_hint: (1, 1)
                    pos_hint: {"center_x": .5, "center_y": .5}
                    padding: 10
                    theme_icon_color: "Custom"
                    icon_color: app.theme_cls.primary_dark
                    on_release: finances.show_ticket(1)
                Widget:

<BalanceLabel>
    id: balance_label
    size_hint: (None, None)
    text: "Balance"
    halign: "center"

<TicketHolder>
    orientation: 'vertical'
    pos_hint: {"center_x": .5}
    size_hint: (None, None)



<TransactionHolder>
    id: transactions
    orientation: 'vertical'
    size_hint: (1, None)

<TransactionScrollView>
    size_hint: (1, 1)
    id: transactions_scroll_view


<TransactionView>
    MDLabel:
        id: date
        size_hint: (0.2, 1)
    MDLabel:
        id: name
        size_hint: (0.5, 1)
    MDLabel:
        id: amount
        size_hint: (0.3, 1)
